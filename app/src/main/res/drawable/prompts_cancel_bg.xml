<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:radius="5dp" />

            <gradient android:angle="270" android:endColor="#E0DCDCDC" android:startColor="#E0DCDCDC" />

            <padding android:bottom="5dp" android:top="5dp" />

            <stroke android:width="1dp" android:color="#B0B0B0" />
        </shape></item>
    <item><shape>
            <corners android:radius="5dp" />  

            <gradient android:angle="270" android:endColor="#F5F5F5" android:startColor="#F5F5F5" />

            <padding android:bottom="5dp" android:top="5dp" />

            <stroke android:width="1dp" android:color="#B0B0B0" />
        </shape></item>

</selector>